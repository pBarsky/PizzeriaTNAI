@model PizzeriaTNAI.Entities.Models.Order

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.City)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.City)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Address)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ZipCode)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ZipCode)
        </dd>

    </dl>
    <table class="order-details-table">

        @if (Model.Items != null)
        {
            <tr>
                <th>@Html.DisplayNameFor(x => x.Items.FirstOrDefault().Product.Name)</th>
                <th>@Html.DisplayNameFor(x => x.Items.FirstOrDefault().Amount)</th>
                <th>@Html.DisplayNameFor(x => x.Items.FirstOrDefault().Price)</th>
            </tr>

            foreach (var item in Model.Items)
            {

                <tr>
                    <td> @item.Product.Name</td>
                    <td> @item.Amount</td>
                    <td> @(item.Price * item.Amount)</td>
                </tr>
            }
            <tr>
                <td></td>
                <td>@Model.Items.Sum(x => x.Amount)</td>
                <td>@Model.Items.Sum(x => x.Price * x.Amount)</td>
            </tr>
        }

    </table>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>